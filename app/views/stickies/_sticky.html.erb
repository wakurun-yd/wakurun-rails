<div class="col-md-2">
  <div class="thumbnail" style="background: #9F9">
    <div class="caption">
      <h3><%= sticky.comment %></h3>
      <span>@<%= sticky.author %></span>
    </div>
    <div class="row">
      <div class="col-xs-8 text-right">
        <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
        <%= sticky.like %>
      </div>
      <div class="col-xs-2">
        <div class="row">
          <%= bootstrap_form_for([@board, sticky]) do |fl| %>
          <%= fl.submit "いいね!", name: "like_btn", class: "btn btn-default btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
