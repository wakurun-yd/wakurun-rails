<p id="notice"><%= notice %></p>
<button id="toggle_sticky_input" type="button" class="btn btn-default">
  入力欄の開閉
</button>
<div id="sticky_input" style="display :none;">
<%= bootstrap_form_for([@board, @sticky]) do |f| %>
  <% if @sticky.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sticky.errors.count, "error") %> prohibited this sticky from being saved:</h2>

      <ul>
      <% @sticky.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.select :group, { Keep: 'keep', Problem: 'problem', Try: 'try'} %>
  <%= f.text_field :comment %>
  <%= f.text_field :author %>
  <%= f.submit "KPTを追加する"%>
<% end %>
</div>
